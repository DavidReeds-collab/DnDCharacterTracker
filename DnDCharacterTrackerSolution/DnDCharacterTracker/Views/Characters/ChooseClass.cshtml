@model DnDCharacterTracker.Models.ClassSelectionModel
@{
    ViewData["Title"] = "ChooseClass";
}

<h1>Choose a Class</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseClass">
            <div class="form-group">
                @Html.Hidden("Id", Model.Id)
                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Classes"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

