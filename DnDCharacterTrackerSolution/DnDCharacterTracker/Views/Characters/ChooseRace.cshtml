@model DnDCharacterTracker.Models.Character
@{
    ViewData["Title"] = "ChooseClass";
}

<h1>Choose a Class</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseRace">
            <div class="form-group">
                @Html.Hidden("Id", Model.Id)
                <label asp-for="FK_Race" class="control-label"></label>
                <select asp-for="FK_Race" class="form-control" asp-items="ViewBag.FK_Race"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

